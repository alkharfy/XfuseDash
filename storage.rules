rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to write to any path under their client folder
    // with a file size limit of 10MB.
    // This covers both market research files and payment screenshots.
    match /{clientId}/{allPaths=**} {
      allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024;
    }

    // Allow authenticated users to read any file.
    // This is useful for displaying images/files later.
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}
