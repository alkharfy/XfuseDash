rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // القاعدة العامة: السماح للمستخدمين المصادق عليهم بقراءة جميع الملفات
    // هذا مفيد لعرض الصور والملفات التي تم رفعها في التطبيق
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // قاعدة لرفع ملفات أبحاث السوق مباشرة تحت ID العميل
    // {clientId}/{fileName}
    match /{clientId}/{fileName} {
       allow write: if request.auth != null;
    }

    // قاعدة لرفع ملفات إثباتات الدفع داخل مجلد payments
    // clients/{clientId}/payments/{fileName}
    match /clients/{clientId}/payments/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
